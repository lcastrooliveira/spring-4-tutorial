<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="helloWorldFactory" class="guru.springframework.services.HelloWorldFactory"/>
	
	<bean id="french" factory-bean="helloWorldFactory" factory-method="createHelloWorldService">
		<constructor-arg value="fr"/>
	</bean>
	
	<bean id="helloWorldServicePortuguese" factory-bean="helloWorldFactory" factory-method="createHelloWorldService">
		<constructor-arg value="pt"/>
	</bean>
	
	<beans profile="english,default">
		<import resource="classpath*:spring/english-hello-world.xml"/>
	</beans>
	
	<beans profile="spanish">
		<import resource="classpath*:spring/spanish-hello-world.xml"/>
	</beans>

</beans>
